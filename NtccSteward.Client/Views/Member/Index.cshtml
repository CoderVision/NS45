@model IEnumerable<NtccSteward.Core.Models.Members.Member>

@{
    ViewBag.Title = "Members";
}

<span class="sectionTitle">Member List</span>

<div id="mem">

    <form class="form-inline">
        <input type="search" id="memberSearch" class="form-control" style="padding:3px;width:300px;margin-bottom:4px;margin-left:0px;" placeholder="Full Name Search"
               oninput="FilterTable('memberTbl', this.value, 'Full Name')" />

        @*<a href="#newMember" data-toggle="modal" onclick="OpenNewMemberForm();return false;" style="margin-left:8px;">Add Member</a>*@
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newMember">Add</button>

        @*<img src="~/images/placeholder.gif" class="toolbarIcon add" alt="Add" title="Add Member" style="margin-left:10px;" />*@
    </form>

    <table id="memberTbl" class="table table-sm table-hover table-bordered">

        <thead class="thead-default">
            <tr>
                <th>
                    Full Name
                </th>
                <th class="hideXs">
                    Status
                </th>
                <th class="hideXs">
                    Status Description
                </th>
                <th class="hideXs">
                    Last Attendance
                </th>
                <th class="hideXs">
                    Phone
                </th>
                <th class="hideXs">
                    Email
                </th>
            </tr>
        </thead>

        @foreach (var m in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(m.FullName, "Edit", "Member", new { id=m.id }, null)
                </td>
                <td class="hideXs">
                    @m.Status
                </td>
                <td class="hideXs">
                    @m.StatusChangeType
                </td>
                <td class="hideXs">
                    @m.ActivityDate
                </td>
                <td class="hideXs">
                    @m.Phone
                </td>
                <td class="hideXs">
                    @m.Email
                </td>
            </tr>
        }
    </table>
</div>

