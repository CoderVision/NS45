
@model NtccSteward.Modules.Members.MemberModule

@{
    ViewBag.Title = @Model.DisplayText;
}

<div class="row">
    <div class="col-xs-6">
        <span class="sectionTitle">@Model.DisplayText</span>
    </div>
    <div class="col-xs-6">
        <input id="SaveBtn" class="btn btn-primary" style="float:right;clear:both;" type="button" onclick="SaveMemberProfile()" value="Save" disabled />
    </div>
</div>


@*This is the tab menu across the top, it shows other modules.
    <div class="row">
    <ul class="nav nav-tabs nav-justified" >
        @for (var i = 0; i < @Model.Modules.Count; i++)
        {
            onclick = "memberModuleLinkClick('@Model.Modules[i]', '@Model.Modules[i].Id')
            <li class="@(i==0?"active":"")"><a href="#">@Model.Modules[i]</a></li>
        }
    </ul>
</div>*@

@*This padding may be necessary if we use the tabs style="padding-top:20px;"*@
<div id="member" style="padding-top:10px;">
    @{
        Html.RenderPartial("~/Views/Member/_MemberProfile.cshtml", Model.InitialModule);
    }
</div>


@section scripts{

    <script src="~/Scripts/Member.js"></script>

    <script type="text/javascript">
            wireEventHandlers("member");
    </script>
}
