<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>@ViewBag.Title</title>

    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/css")

</head>

@* Added the padding-top, but this will mess things up...  It needs to compensate for the top-fixed navbar, may need to be smaller than 80px *@
<body>
    
        <header style="margin-top:0px;">

            <nav class="navbar navbar-inverse navbar-fixed-top banner" role="navigation" style="margin-top:0px;">
                <div class="container" style="margin-top:0px;">
                    <div class="navbar-header" style="margin-top:0px;">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>

                        <a class="navbar-brand navbar-left" href="/"><img src="~/Content/images/ntcclogo4-sml.png" /></a>
                    </div>

                    <div id="navbar" class="collapse navbar-collapse" style="margin-top:0px;">

                        <ul class="nav navbar-nav navbar-right">
                            <li><a href=@Url.Action("Index", "Home")><img src="~/Content/images/placeholder.gif" class="navIcon navHome"  alt="Home" title="Home" /></a></li>
                            <li><a href=@Url.Action("Index", "Member", new { statusId=49 })><img src="~/Content/images/placeholder.gif" class="navIcon navMembers" alt="Members" title="Members" /></a></li>
                            @*<li><a href=@Url.Action("Index", "Messages")><img src="~/images/placeholder.gif" class="navIcon navMessages" alt="Messages" title="Messages" /></a></li>*@
                            @*<li><a href=@Url.Action("Index", "Church")><img src="~/images/placeholder.gif" class="navIcon navChurch" alt="Churches" title="Churches" /></a></li>*@
                            @*<li class="hidden-sm"><a href=@Url.Action("Index", "Report")><img src="~/images/placeholder.gif" class="navIcon navReport" alt="Perspectives" title="Perspectives" /></a></li>
                                <li class="hidden-sm"><a href=@Url.Action("Index", "Admin")><img src="~/images/placeholder.gif" class="navIcon navAdmin" alt="Admin" title="Admin" /></a></li>
                                <li><a href=@Url.Action("Index", "Help")><img src="~/images/placeholder.gif" class="navIcon navHelp" alt="Help" title="Help" /></a></li>*@
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        @*style="height:100%;"*@
        <div class="container" >
            @RenderBody()
        </div>


    @*<script src="~/Scripts/jquery-1.12.4.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>
    <script src="~/Scripts/jquery.event.drag.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>*@

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/site")

    @RenderSection("scripts", required: false)

</body>		
</html>
