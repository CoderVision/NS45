@model NtccSteward.ViewModels.Common.Address.PhoneVm

<div id="phone_@Model.Id">
    <form class="form-horizontal">
        <fieldset class="col-xs-12">

            <div class="form-group">
                <label for="phoneNumber" class="col-sm-1 control-label labelNormal">Phone</label>
                <div class="col-sm-11">
                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", @id = "phoneNumber", @placeholder = "Enter phone number" })
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12 center">
                    <ul class="list-inline center-block text-center">
                        <li class="col-sm-3">
                            <label class="checkbox-inline">@Html.CheckBoxFor(m => m.Verified, new { @id = "verified", @class = "nscheckbox" })  Verified</label>
                        </li>
                        <li class="col-sm-3">
                            <label class="checkbox-inline">@Html.CheckBoxFor(m => m.Preferred, new { @id = "preferred", @class = "nscheckbox" })  Preferred</label>
                        </li>
                        <li class="col-sm-3">
                            <img class="img-responsive inline-block center icon" onclick="OpenText('@Model.Id')" src="~/images/Text-32.png" alt="Open text" />
                        </li>
                        <li class="col-sm-3">
                            <img class="icon" onclick="RemoveAddress(@Model.Id, 'phone')" src="~/images/remove-32.png" alt="Remove Address" style="height:12px;vertical-align:middle;" />
                        </li>
                    </ul>
                </div>
            </div>
            <hr class="center" style="width:80%;" />
        </fieldset>
    </form>
    
</div>

