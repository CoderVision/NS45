

@model NtccSteward.Modules.Church.ChurchModule

@{
    ViewBag.Title = @Model.DisplayText;
}

<div class="row">
    <div class="col-xs-6">
        <span class="sectionTitle">@Model.DisplayText</span>
    </div>
    <div class="col-xs-6">
        <button id="SaveBtn" class="btn btn-primary" style="float:right;clear:both;" type="button" onclick="SaveChurchProfile()" disabled>
            <span class="glyphicon glyphicon-save glyphicon-btn"></span> Save
        </button>
    </div>
</div>

<div id="church" style="padding-top:10px;">
    @{
        Html.RenderPartial("~/Views/Church/_ChurchProfile.cshtml", Model.InitialModule);
    }
</div>


@section scripts {
    
    <script src="~/Scripts/church.js"></script>

    <script type="text/javascript">
        $(function () {
            wireEventHandlers("church");
        });
    </script>
}
