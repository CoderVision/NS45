@{
     ViewBag.Title = "Churches";
}

<span class="sectionTitle">Church List</span>

<div id="chu">

    <form class="form-inline">
        <input type="text" id="churchSearch" class="form-control" style="padding:3px;width:300px;margin-bottom:4px;margin-left:0px;" placeholder="Church Name Search"
               oninput="search_oninput(chuLstLdr, this.value)" />

        <a href="#addChurch" data-toggle="modal"><img src="~/images/placeholder.gif" class="toolbarIcon add" alt="Add" title="Add Church " style="margin-left:10px;" /> Add Church</a>
    </form>

    @*<button onclick="memLstLdr.load();">test</button>*@

    <div id="churchGrid" style="width:100%;height:500px;" />

    <img id="loader" class="spinner" src="~/images/ajax-spinner.gif" />
</div>

<input type="hidden" id="memberId" />

<div class="modal fade" id="addChurch">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Add Church</h4>
            </div>

            <div class="modal-body">
                <form class="form">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-12">
                                <label for="firstName" class="labelNormal">Church Name</label>
                                <input type="text" class="form-control" id="firstName" placeholder="Enter first name" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group" style="margin-bottom: 0px !important;">
                        <div class="row">
                            <div class="col-xs-12">
                                <label for="line1" class="labelNormal">Address</label>
                                <input type="text" class="form-control" id="line1" placeholder="Enter line 1" />
                                <div class="form-group row">
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control addyGutter" id="city" placeholder="City" />
                                    </div>
                                    <div class="col-sm-3">
                                        <input type="text" class="form-control addyGutter" id="state" placeholder="State" />
                                    </div>
                                    <div class="col-sm-3">
                                        <input type="text" class="form-control addyGutter" id="zip" placeholder="Zip" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="phone" class="labelNormal">Phone</label>
                        <div>
                            <input type="text" class="form-control" id="phone" placeholder="Enter phone" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="email" class="labelNormal">Email</label>
                        <div>
                            <input type="text" class="form-control" id="email" placeholder="Enter email" />
                        </div>
                    </div>

                    <div class="clearfix" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default">Save</button>
                <button type="button" class="btn btn-primary">Save &amp; Open</button>
                <button type="button" class="btn btn-default">Save &amp; Add Another</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

@section scripts {

    <script src="~/js/church.js"></script>

    <script type="text/javascript">
        chuLstLdr.load();
    </script>
}