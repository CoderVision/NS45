<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>@ViewBag.Title</title>

    @*<link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">*@

    
    @*<link href="~/Content/bootstrap.min.css" rel="stylesheet" />*@
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />

    @*<link href="~/Content/bootstrap.css" rel="stylesheet" />*@
    <link href="~/Content/Site.css" rel="stylesheet" />

    @Scripts.Render("~/bundles/modernizr")
   
</head>

@* Added the padding-top, but this will mess things up...  It needs to compensate for the top-fixed navbar, may need to be smaller than 80px *@
<body>
        <header style="margin-top:0px;">
            @*banner style="margin-top:0px;"*@
            <nav class="navbar navbar-inverse navbar-fixed-top banner" role="navigation" >
                @*style="margin-top:0px;"*@
                <div class="container" >
                    @*style="margin-top:0px;"*@
                    <div class="navbar-header" >
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>

                        <a class="navbar-brand navbar-left" href="/"><img src="~/Content/images/ntcclogo4-sml.png" /></a>
                    </div>

                    @*style="margin-top:0px;"*@
                    <div id="navbar" class="navbar-collapse collapse" >

                        <ul class="nav navbar-nav navbar-right">

                            @*<li class="hidden-xs"><a href=@Url.Action("Index", "Home")><img src="~/Content/images/placeholder.gif" class="navIcon navHome" alt="Home" title="Home" /></a></li>*@
                            <li class="hidden-xs"><a id="memberIcon" href=@Url.Action("Index", "Member", new { statusId = 49 })><img src="~/Content/images/placeholder.gif" class="navIcon navMembers" alt="Members" title="Members" /></a></li>
                            <li class="hidden-xs"><a id="churchIcon" href=@Url.Action("Index", "Church")><img src="~/Content/images/placeholder.gif" class="navIcon navChurch" alt="Churches" title="Churches" /></a></li>

                            @*<li class="hidden-sm hidden-md hidden-lg">@Html.ActionLink("Home", "Index", "Home", new { @class = "hidden-sm-up" })</li>*@
                            <li class="hidden-sm hidden-md hidden-lg">@Html.ActionLink("Member", "Index", "Member", new { @id = "memberLink", @statusIds = "49-50", @page=1, @pageSize=1000 }, null)</li>
                            <li class="hidden-sm hidden-md hidden-lg">@Html.ActionLink("Church", "Index", "Church", new { @id = "churchLink"}, null)</li>

                            @*<li><a href=@Url.Action("Index", "Home")><img src="~/Content/images/placeholder.gif" class="navIcon navHome"  alt="Home" title="Home" /></a></li>
                            <li><a href=@Url.Action("Index", "Member", new { statusId=49 })><img src="~/Content/images/placeholder.gif" class="navIcon navMembers" alt="Members" title="Members" /></a></li>*@

                            @*<li><a href=@Url.Action("Index", "Messages")><img src="~/images/placeholder.gif" class="navIcon navMessages" alt="Messages" title="Messages" /></a></li>*@
                            @*<li><a href=@Url.Action("Index", "Church")><img src="~/images/placeholder.gif" class="navIcon navChurch" alt="Churches" title="Churches" /></a></li>*@
                            @*<li class="hidden-sm"><a href=@Url.Action("Index", "Report")><img src="~/images/placeholder.gif" class="navIcon navReport" alt="Perspectives" title="Perspectives" /></a></li>
                                <li class="hidden-sm"><a href=@Url.Action("Index", "Admin")><img src="~/images/placeholder.gif" class="navIcon navAdmin" alt="Admin" title="Admin" /></a></li>
                                <li><a href=@Url.Action("Index", "Help")><img src="~/images/placeholder.gif" class="navIcon navHelp" alt="Help" title="Help" /></a></li>*@
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        @*style="height:100%;"*@
        <div class="container">
            @RenderBody()
        </div>



    @*<script src="~/Scripts/jquery-3.1.1.min.js"></script>*@
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>

    @*<script src="~/Scripts/jquery.validate.min.js"></script>*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.11.1/jquery.validate.min.js"></script>

    @*<script src="~/Scripts/bootstrap.min.js"></script>*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/knockout/3.4.1/knockout-min.js"></script>

    <script src="~/Scripts/site.js"></script>

    @RenderSection("scripts", required: false)

</body>		
</html>
