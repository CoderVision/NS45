@model NtccSteward.ViewModels.Message.MessageVm
@using NtccSteward.Core.Framework.Enums

@{ 
    var formatClass = Model.Direction == MessageDirection.Sent ? "panel panel-success float-right msgPnl" : "panel panel-warning msgPnl";
    var subject = !string.IsNullOrWhiteSpace(Model.Subject) ? $"({Model.Subject}) " : "";
}

<div class="@formatClass">
    <div class="panel-heading">
        <h6 class="pull-right" style="margin-top:1px;">@Model.MessageDate.ToString("MM/dd/yyyy hh:mm tt")</h6>
        <h3 class="panel-title">@Model.MemberName</h3>
    </div>
    <div class="panel-body">@string.Concat(subject, Model.Body)</div>
</div>