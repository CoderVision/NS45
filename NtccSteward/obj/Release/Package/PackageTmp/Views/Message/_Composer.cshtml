<style>
    ul{
        list-style-type:none;
        margin:0;
        padding:0;
        overflow:hidden
    }
    li:hover {
        background-color: hsl(141,23%,75%);
    }
    .liFloat{
        float:left;
        padding-right:25px;
    }
    .liDisabled{
        color:darkgray;
    }
</style>
<span class="sectionTitle">Compose Message</span>

<div id="member" class="nstable" style="width:100%;">
    <div class="nstablerow">
        <div class="nstablecell" style="width:200px;vertical-align:top;padding: 0px;">

            <label for="firstName" class="control-label labelNormal">Groups</label>
            <div style="height:200px;border: solid 1px grey;margin: 0px 0px 20px 0px;">
                <!-- this is going to be the group list & group member list.  
                    when you click on a group, it is going to show the members of the group.
                    you should be able to add/remove members from the group
                    -->
                <ul class="list-group">
                    <li class="list-group-item" onmouseover="ShowGroupMembers(1)"><label class="checkbox-inline"><input type="checkbox" class="nscheckbox" /> Group 1</label></li>
                    <li class="list-group-item" onmouseover="ShowGroupMembers(2)"><label class="checkbox-inline"><input type="checkbox" class="nscheckbox" /> Group 2</label></li>
                    <li class="list-group-item" onmouseover="ShowGroupMembers(3)"><label class="checkbox-inline"><input type="checkbox" class="nscheckbox" /> Group 3</label></li>

                    @*<label class="checkbox-inline">@Html.CheckBoxFor(m => m.Verified, new { @id = "verified", @class = "nscheckbox" })  Verified</label>*@
                </ul>
            </div>

            <p>
                <span class="sectionTitle">Note:  Need to add a window to add members to a group</span>
            </p>

            <label id="lblGroupMember" class="control-label labelNormal">Group Members</label>
            <div id="groupMembers" style="height:200px;border: solid 1px grey;">
                <!-- this is going to be the group list & group member list.
                when you click on a group, it is going to show the members of the group.
                you should be able to add/remove members from the group
                -->

            </div>
        </div>

        <div class="nstablecell" style="padding: 0px;vertical-align:top;">
            <div style="margin-left:20px;">

                <!-- this is going to be the subject/body area-->
                <form class="form" id="sendMsgForm">

                    <div class="form-group">
                        <label for="recipient" class="labelNormal">Type of Message</label>
                        <div>
                            @*<input type="text" class="form-control" id="recipient" placeholder="Enter address" />*@
                            <input class="btn btn-primary" style="float:right;" type="button" value="Send" />

                            <ul>
                                <li class="liFloat"><input type="checkbox" class="nscheckbox" /> Text Message</li>
                                <li class="liFloat"><input type="checkbox" class="nscheckbox" /> Email</li>
                                <li class="liFloat liDisabled"><input type="checkbox" class="nscheckbox" disabled /> facebook</li>
                                <li class="liFloat liDisabled"><input type="checkbox" class="nscheckbox" disabled  /> Twitter</li>
                            </ul>
                        </div>
                    </div>

                    <div id="subjectGrp" class="form-group">
                        <label for="subject" class="labelNormal">Subject</label>
                        <div>
                            <input type="text" class="form-control" id="subject" placeholder="Enter subject" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="body" class="labelNormal">Message</label>
                        <div>
                            <textarea class="form-control" id="body" placeholder="Enter message" rows="3" ></textarea>
                        </div>
                    </div>

                    @*<div class="clearfix" />*@
                </form>
            </div>

            <img id="profileLoader" class="spinner" src="~/images/ajax-spinner.gif" style="visibility:hidden;" />
        </div>
    </div>
</div>

