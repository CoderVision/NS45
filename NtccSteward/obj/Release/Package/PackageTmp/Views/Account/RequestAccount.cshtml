@model NtccSteward.ViewModels.Account.RequestAccountVm

@{
    ViewBag.Title = "Request Account";
}

@using (Html.BeginForm("SubmitAccountRequest", "Account", FormMethod.Post, new { @id = "requestAcct", @class="form" }))
{
    @Html.AntiForgeryToken();

    <div id="failureMsg" class="alert alert-danger @(ViewData.ModelState.IsValid ? "hidden" : "") " role="alert">
        @Html.ValidationSummary("", new { @class = "" })
    </div>

    <div class="form-group">
        <label for="FirstName" class="labelNormal">First Name</label>
        @Html.TextBoxFor(vm => vm.FirstName, new { @class = "form-control", @id = "FirstName", @placeholder = "Enter first name" })
    </div>

    <div class="form-group">
        <label for="LastName" class="labelNormal">Last Name</label>
        @Html.TextBoxFor(vm => vm.LastName, new { @class = "form-control", @id = "LastName", @placeholder = "Enter last name" })
    </div>

    <div class="form-group">
        <label for="Email" class="labelNormal">Email Address</label>
        @Html.TextBoxFor(vm => vm.Email, new { @type = "email", @class = "form-control", @id = "Email", @placeholder = "Enter email" })
    </div>

    <div class="form-group">
        <label for="Password" class="labelNormal">Password</label>
        @Html.PasswordFor(vm => vm.Password, new { @type = "password", @class = "form-control", @id = "Password", @placeholder = "Enter password" })
        <input type="password" id="password2" name="password2" class="form-control" placeholder="Re-enter password" />
    </div>

    <div class="form-group">
        <label for="PastorName" class="labelNormal">Pastor Name</label>
        @Html.TextBoxFor(vm => vm.PastorName, new { @class = "form-control", @id = "PastorName", @placeholder = "Enter pastor name" })
    </div>

    <div class="form-group">
        <label for="Church" class="labelNormal">Church Name</label>
        @Html.DropDownListFor(vm => vm.ChurchId, new SelectList(Model.ChurchList.OrderBy(c => c.Name), "Id", "Name"), new { @class = "form-control", @id = "Church", @placeholder = "Select church" })
    </div>

    <div class="form-group">
        <label for="City" class="labelNormal">City</label>
        @Html.TextBoxFor(vm => vm.City, new { @class = "form-control", @id = "City", @placeholder = "Enter city" })
    </div>

    <div class="form-group">
        <label for="State" class="labelNormal">State</label>
        @Html.TextBoxFor(vm => vm.State, new { @class = "form-control", @id = "State", @placeholder = "Enter state" })
    </div>

    <div class="form-group">
        <label for="Comments" class="labelNormal">Comments</label>
        @Html.TextAreaFor(vm => vm.Comments, new { @class = "form-control", @id = "Comments", @placeholder = "Enter comments" })
    </div>

    <input class="btn" type="submit" value="Request an Account" style="margin-top:6px;" />
}


@section scripts
{
    <script type="text/javascript">

        $(document).ready(function () {

            initializeRequestAccount();
        });

    </script>
}