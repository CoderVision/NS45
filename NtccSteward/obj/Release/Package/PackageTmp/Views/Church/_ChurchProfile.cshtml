@model NtccSteward.Modules.Church.ChurchProfile



@using (Html.BeginForm("SaveProfile", "Members", FormMethod.Post, new { id = "_memberProfileForm", @class = "form", @role = "form" }))
{
    @Html.AntiForgeryToken();

    <input type="hidden" name="identityId" id="identityId" value="@Model.Id" />

    <div>
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">

                <fieldset class="form-group">
                    <label for="churchName" class="labelNormal">Church Name</label>
                    @Html.TextBoxFor(m => m.ChurchName, new { @class = "form-control", @id = "churchName", @placeholder = "Enter church name" })
                </fieldset>

            </div>

            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                &nbsp;
            </div>

        </div>
    </div>
}


<div class="moduleContent" style="margin-top:10px;padding-right: 4px;">

    <span class="sectionTitle">Address</span>
    <div id="addressList_@Model.Id">
        @for (var i = 0; i < Model.Addys.Count; i++)
        {
            await Html.RenderPartialAsync("~/Views/Shared/AddressInfo/_Address.cshtml", Model.Addys[i]);
        }
    </div>
    <div>
        <label style="cursor:pointer;" onclick="AddAddress(@Model.Id, 'address', 'addressList_@Model.Id' )"><img id="addAddy" src="~/images/add.png" style="width:20px;height:20px;vertical-align:middle;margin-bottom:4px;" />  Add address</label>
    </div>
</div>

<div class="moduleContent" style="margin-top:10px;padding-right: 4px;">
    <div id="phoneList">
        <span class="sectionTitle">Phone</span>
        <div id="phoneList_@Model.Id">
            @for (var i = 0; i < Model.PhoneNums.Count; i++)
            {
                await Html.RenderPartialAsync("~/Views/Shared/AddressInfo/_Phone.cshtml", Model.PhoneNums[i]);
            }
        </div>
        <div>
            <label style="cursor:pointer;" onclick="AddAddress(@Model.Id, 'phone', 'phoneList_@Model.Id')"><img id="addAddy" src="~/images/add.png" style="width:20px;height:20px;vertical-align:middle;margin-bottom:4px;" />  Add phone</label>
        </div>
    </div>
</div>

<div class="moduleContent" style="margin-top:10px;padding-right: 4px;">
    <div id="emailList">
        <span class="sectionTitle">Email</span>
        <div id="emailList_@Model.Id">
            @for (var i = 0; i < Model.EmailAddys.Count; i++)
            {
                await Html.RenderPartialAsync("~/Views/Shared/AddressInfo/_Email.cshtml", Model.EmailAddys[i]);
            }
        </div>
        <div>
            <label style="cursor:pointer;" onclick="AddAddress(@Model.Id, 'email', 'emailList_@Model.Id' )"><img id="addEmail" src="~/images/add.png" style="width:20px;height:20px;vertical-align:middle;margin-bottom:4px;" />  Add email</label>
        </div>
    </div>
</div>
