@model NtccSteward.ViewModels.Common.Address.EmailVm

<div id="email_@Model.Id">

    <form class="form-horizontal">
        <fieldset class="col-xs-12">

            <div class="form-group">
                <label for="emailAddress" class="col-sm-1 control-label labelNormal">Email</label>
                <div class="col-sm-11">
                    @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control", @id = "emailAddress", @placeholder = "Enter email address", type="email" })
                </div>
            </div>

            <div class="row">
                <div class="col-xs-1">
                </div>
                <div class="col-xs-11">
                    <label class="checkbox-inline addyVerified">@Html.CheckBoxFor(m => m.Verified, new { @id = "verified", @class = "nscheckbox", type = "checkbox" })  Verified</label>
                    <label class="checkbox-inline addyPreferred">@Html.CheckBoxFor(m => m.Preferred, new { @id = "preferred", @class = "nscheckbox", type = "checkbox" })  Preferred</label>
                    <img class="img-responsive inline-block center icon addyActionImg" onclick="OpenEmail('@Model.Id')" src="~/content/images/Mail-32.png" alt="Open email" />
                    <img class="icon addyRemoveImg" onclick="RemoveAddress(@Model.Id, 'email')" src="~/content/images/remove-32.png" alt="Remove Address" style="height:12px;vertical-align:middle;" />
                </div>
            </div>

            <hr class="center" style="width:80%;" />
        </fieldset>
    </form>
</div>