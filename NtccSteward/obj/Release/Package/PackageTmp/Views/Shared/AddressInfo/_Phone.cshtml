@model NtccSteward.ViewModels.Common.Address.PhoneVm

<div id="phone_@Model.Id">
    <form class="form-horizontal">
        <fieldset class="col-xs-12">

            <div class="form-group">
                <label for="phoneNumber" class="col-sm-1 control-label labelNormal">Phone</label>
                <div class="col-sm-11">
                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", @id = "phoneNumber", @placeholder = "Enter phone number", type="tel" })
                </div>
            </div>

            <div class="row">
                <div class="col-xs-1">
                </div>
                <div class="col-xs-11">
                    <label class="checkbox-inline addyVerified">@Html.CheckBoxFor(m => m.Verified, new { @id = "verified", @class = "nscheckbox", type = "checkbox" })  Verified</label>
                    <label class="checkbox-inline addyPreferred">@Html.CheckBoxFor(m => m.Preferred, new { @id = "preferred", @class = "nscheckbox", type = "checkbox" })  Preferred</label>
                    <img class="img-responsive inline-block center icon addyActionImg" onclick="OpenText('@Model.Id')" src="~/content/images/Text-32.png" alt="Open Text" />
                    @*<img class="icon addyRemoveImg" onclick="RemoveAddress(@Model.Id, 'address')" src="~/content/images/remove-32.png" alt="Remove Address" style="height:12px;vertical-align:middle;" />*@
                    <label class="addyRemoveLabel" onclick="RemoveAddress(@Model.Id, 'address')" title="remove">
                        <span class="glyphicon glyphicon-remove addyRemoveGlyph"></span>
                    </label>
                </div>
            </div>

            <hr class="center" style="width:80%;" />
        </fieldset>
    </form>
    
</div>

